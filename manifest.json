{
  "manifest_version": 3,
  "name": "Full Page Screenshot",
  "version": "1.0.0",
  "description": "Capture full-page screenshots by scrolling and stitching images locally",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Capture Full Page Screenshot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

